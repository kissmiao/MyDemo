<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/papayawhip"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_scroll_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="滑动to" />

    <Button
        android:id="@+id/bt_scroll_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="滑动by" />

    <Button
        android:id="@+id/bt_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滑动" />


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.hongliang.demo.view.MView3
            android:id="@+id/myview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/aqua"></com.hongliang.demo.view.MView3>
    </FrameLayout>

</LinearLayout>