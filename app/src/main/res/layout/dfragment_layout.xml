<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.hongliang.demo.view.ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_moveview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

        </LinearLayout>
    </com.hongliang.demo.view.ScrollView>


    <com.hongliang.demo.view.MViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Path" />

        <Button
            android:id="@+id/bt_paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paint" />

        <Button
            android:id="@+id/bt_canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canvas" />

        <Button
            android:id="@+id/bt_curve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="curve" />

        <Button
            android:id="@+id/btn_loadeLoade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点赞" />

        <Button
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clock" />

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="menu" />

        <Button
            android:id="@+id/broken_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折线" />

        <Button
            android:id="@+id/column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柱状图" />

        <Button
            android:id="@+id/bt_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刻度滑动" />

        <Button
            android:id="@+id/bt_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进度" />


        <Button
            android:id="@+id/bt_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MyVeiw" />


        <Button
            android:id="@+id/bt_solid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光晕" />

        <Button
            android:id="@+id/qq_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ" />

        <Button
            android:id="@+id/bt_circular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circular" />

        <Button
            android:id="@+id/bt_circular2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circular2" />

        <Button
            android:id="@+id/bt_attributeSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AttributeSet" />


        <Button
            android:id="@+id/bt_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scroll" />
    </com.hongliang.demo.view.MViewGroup>


</LinearLayout>
